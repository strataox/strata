---
// @atoms/Avatar.astro

import Icon from '@atoms/Icon.astro'

interface Props extends HTMLAttributes {
	tag?: keyof HTMLElementTagNameMap
	icon: string
	size?: 'sm' | 'md' | 'lg'
	class?: string
}

const {
	tag: Avatar = 'span',
	icon,
	size = 'md',
	class: classes,
	...attrs
} = Astro.props as Props
---

<Avatar
	{...attrs}
	class:list={[
		'inline-flex items-center justify-center rounded-full',
		'bg-(--elev-on-dark)',
		'outline -outline-offset-1 outline-black/5 shadow-md',

		size === 'sm' && 'size-10',
		size === 'md' && 'size-12',
		size === 'lg' && 'size-16',

		classes,
	]}>
	<Icon
		name={icon}
		class:list={[
			'text-(--neutral)',

			size === 'sm' && 'size-5',
			size === 'md' && 'size-6',
			size === 'lg' && 'size-7',
		]}
	/>
</Avatar>
