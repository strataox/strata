---
// @blocks/Crosshairs.astro

import Icon from '@atoms/Icon.astro'

interface Props extends HTMLAttributes {
	tag?: keyof HTMLElementTagNameMap
	class?: string
}

const {
	tag: Crosshairs = 'div',
	class: classes,
	...attrs
} = Astro.props as Props
---

<Crosshairs
	{...attrs}
	class:list={['relative grid pointer-events-none', classes]}>
	<Icon
		name='orbit'
		class:list={[
			'col-start-1 row-start-1',
			'size-full',
			'text-(--accent-hairline)',
		]}
	/>
	<span
		aria-hidden='true'
		class:list={[
			'absolute left-1/2 w-px',
			'top-[-100vh] bottom-[-100vh]',
			'-translate-x-1/2',
			'bg-(--accent-hairline)/75',
		]}></span>
	<span
		aria-hidden='true'
		class:list={[
			'absolute top-1/2 h-px',
			'left-[-100vw] right-[-100vw]',
			'-translate-y-1/2',
			'bg-(--accent-hairline)/75',
		]}></span>
</Crosshairs>
