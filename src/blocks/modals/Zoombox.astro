---
// @blocks/modals/Zoombox.astro

import Avatar from '@atoms/Avatar.astro'

interface Props extends HTMLAttributes {
	tag?: keyof HTMLElementTagNameMap
	class?: string
}

const { tag: Zoombox = 'div', class: classes, ...attrs } = Astro.props as Props
---

<Zoombox
	data-pbl-tap-zoombox
	class:list={[
		'fixed inset-0 z-50',
		'flex items-center justify-center',
		'invisible pointer-events-none cursor-zoom-out overflow-hidden',
		'bg-black/30 backdrop-blur-lg',
		classes,
	]}
	aria-hidden='true'>
	<img
		alt=''
		class:list={['max-w-full max-h-dvh object-contain select-none']}
	/>
</Zoombox>
