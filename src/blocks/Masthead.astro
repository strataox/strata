---
// @blocks/Masthead.astro

import Icon from '@atoms/Icon.astro'

interface Props extends HTMLAttributes {
	tag?: keyof HTMLElementTagNameMap
	class?: string
}

const { tag: Masthead = 'div', class: classes, ...attrs } = Astro.props as Props
---

<Masthead {...attrs} class:list={['pbl-masthead', classes]}>
	<Icon
		name='masthead-25'
		class='block h-auto w-[clamp(0px,calc(100vw-2rem),60rem)]'
	/>
</Masthead>
