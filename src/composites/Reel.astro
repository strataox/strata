---
// @composites/Reel.astro

import Icon from '@atoms/Icon.astro'

interface Props extends HTMLAttributes {
	tag?: keyof HTMLElementTagNameMap
	class?: string
}

const { tag: Reel = 'section', class: classes, ...attrs } = Astro.props as Props
---

<Reel {...attrs} class:list={['relative grid', classes]}>
	<Icon
		name='orbit'
		class:list={[
			'col-start-1 row-start-1',
			'w-full h-auto',
			'text-(--accent-hairline)',
			'pointer-events-none',
		]}
	/>
	<span
		aria-hidden='true'
		class:list={[
			'absolute left-1/2 w-px',
			'top-[-100vh] bottom-[-100vh]',
			'-translate-x-1/2',
			'bg-(--accent-hairline)',
		]}
    />
	<span
		aria-hidden='true'
		class:list={[
			'absolute top-1/2 h-px',
			'left-[-100vw] right-[-100vw]',
			'-translate-y-1/2',
			'bg-(--accent-hairline)',
		]}
    />
</Reel>
