---
// @composites/Carousel.astro
import { _getGallery } from '@scripts/data/get-gallery'

interface Props extends HTMLAttributes {
	tag?: keyof HTMLElementTagNameMap
	year: string
	limit?: number
}

const {
	tag: Carousel = 'section',
	year,
	limit = 7,
	class: classes,
	...attrs
} = Astro.props as Props

const gallery = await _getGallery(year, limit)
const imgSrc = (url: string) =>
	import.meta.env.DEV
		? url
		: `/.netlify/images?url=${encodeURIComponent(url)}&w=${IMG_WIDTH}&q=80&auto=format`
---

<Carousel {...attrs} class:list={['pt-(--space) lg:pt-0', classes]}>
	<div class:list={['bg-black py-[calc(var(--space)*2)]']}>
		Lorem ipsum dolor sit amet consectetur adipisicing elit. Quia
		voluptatibus, sit cupiditate eveniet earum, aut voluptatem facilis
		recusandae explicabo ipsa et minima molestias quisquam maiores
		laboriosam aliquid repudiandae nobis quam!
	</div>
</Carousel>
