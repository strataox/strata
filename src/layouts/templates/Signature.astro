---
// @layouts/Signature.astro
import { site } from '@scripts/data/get-meta'

interface Signature {
	title: string
	description: string
}

interface Props {
	data: Signature
}

const { data } = Astro.props as Props
const { title, description } = data
---

<table
	role='presentation'
	cellpadding='0'
	cellspacing='0'
	width='600'
	style="width: 600px; max-width: 100%; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif; font-size: 14px; line-height: 1.45; color: #101619; background-color: #E7EFF4; border-radius: 24px; overflow: hidden;">
	<tr>
		<td style='padding: 24px;'>
			<div style='font-size: 18px; font-weight: 700; color: #101619;'>
				{title}
			</div>
			<div
				style='font-size: 16px; color: #3b3f3f; font-style: italic; margin-top: -2px;'>
				{description}
			</div>

			<table
				role='presentation'
				cellpadding='0'
				cellspacing='0'
				style='margin-top: 32px;'>
				<tr>
					<td>
						<img
							src={site.logo.src}
							width='112'
							alt={site.logo.alt}
							style='display: block; height: auto; border: 0;'
						/>
					</td>
				</tr>
			</table>

			<div
				style='margin-top: 12px; font-size: 18px; color: #0a4e74; font-weight: 500; font-style: italic;'>
				{site.description}
			</div>

			<div style='margin-top: -1px;'>
				<a
					href={site.url}
					style='color: #0c6291; text-decoration: none; font-weight: 500;'>
					{site.url.replace('https://', '')}
				</a>
			</div>
		</td>
	</tr>
	<tr>
		<td style='padding: 0;'>
			<img
				src={site.pattern.src}
				width='600'
				height='56'
				alt={site.pattern.alt}
				style='display: block; width: 600px; max-width: 100%; height: auto; border: 0;'
			/>
		</td>
	</tr>
</table>
