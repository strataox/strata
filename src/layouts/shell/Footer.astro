---
// @layouts/shell/Footer.astro

import Icon from '@atoms/Icon.astro'
import Grid from '@layouts/core/Grid.astro'
import { site } from '@scripts/data/get-meta'

const { class: classes, ...attrs } = Astro.props as Props
const currentYear = new Date().getFullYear()
const meta = site
const copyright = `Â© ${currentYear} ${meta.legalName}. ${meta.declaration}`
---

<footer {...attrs} class:list={['relative overflow-clip', classes]}>
	<Grid class:list={['flex flex-col justify-between h-full']}>
		<small
			class:list={[
				'col-span-full',
				'p-(--space) text-sm',
				'text-(--body)/70',
			]}
			set:text={copyright}
		/>
		<Icon
			name='pebble-layers'
			class:list={['col-span-full']}
			aria-hidden='true'
		/>
	</Grid>
</footer>
